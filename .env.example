# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Admin Configuration (Server-side only)
# These should be stored in your hosting platform's environment variables
# DO NOT commit actual values to version control
ADMIN_EMAIL=admin@example.com
ADMIN_INITIAL_PASSWORD=ChangeMeImmediately123!

# Security Configuration
VITE_ENABLE_HTTPS=true
VITE_CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline' https://unpkg.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co wss://*.supabase.co;"

# Optional: IP Restriction (comma-separated list)
# ADMIN_ALLOWED_IPS=192.168.1.1,10.0.0.1

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_REFRESH_INTERVAL_MINUTES=20

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
API_RATE_LIMIT_PER_MINUTE=60