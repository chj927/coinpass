# Server-side environment variables (NEVER expose to client)
# Copy this file to .env.server and fill in your values

# Supabase Configuration (Server-side only)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# JWT Secret for token generation
JWT_SECRET=your-very-secure-jwt-secret-at-least-32-characters

# API Server Configuration
API_PORT=3001
NODE_ENV=production

# Database (if using direct connection)
DATABASE_URL=postgresql://user:password@host:port/database

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://coinpass.kr,https://www.coinpass.kr

# Admin Email Notifications (optional)
ADMIN_EMAIL=admin@coinpass.kr
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password